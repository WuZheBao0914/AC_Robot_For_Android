<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/map_build_main_layout">
    <cn.edu.uestc.android_10.view.RosImageView
        android:id="@+id/cameraview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1" />
    <cn.edu.uestc.android_10.view.RosImageView
        android:id="@+id/fakeCameraView"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <LinearLayout android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/map_build_side_layout">
        <org.ros.android.view.visualization.VisualizationView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:id="@+id/visualizationView"
            />
        <cn.edu.uestc.cssl.view.JoyStickView
            android:id="@+id/joystick"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_weight="1"
            app:buttonColor="#ACACAC"
            app:padColor="#636363" />
    </LinearLayout>
</LinearLayout>